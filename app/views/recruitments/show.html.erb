
<div class="content">
  <div class="each-p">
    <div class="p-upper">
      <div class="p-user">
        <p>
          <%= image_tag("user.png", :alt => "募集者の画像", :class => "user-pic") %>
        </p>
        <div class="user-name">
          <p><%= link_to @recruitment.user.name, user_path(@user) %></p>
        </div>
        <div class="user-pref">
          <p><%= @recruitment.user.prefecture %></p>
        </div>
      </div>
      <div class="p-title">
        <h2><%= @recruitment.title %></h2>
      </div>
    </div>
    <div class="p-content">
      <p>
        <%= @recruitment.content %>
      </p>
      <div>
        <%= link_to '削除', recruitment_path(@recruitment), method: :delete, data: {confirm: '本当にいいですか？'} %>
        <%= link_to '編集', edit_recruitment_path(@recruitment) %>
      </div>
    </div>
    <div class="p-tag">
      <span>
        <%= fa_icon 'clock' %>
        希望日: <%= @recruitment.hope_day %>
      </span>
      <%= render 'category' %>
    </div>
  </div>
</div>
