.sidebar
  .s-title.side-each
    .side-around
      %h2.brand-title= link_to 'Teachme', root_path, class: "top-title"
  - if user_signed_in?
    .s-prof.side-each.s-hover
      = link_to user_path(current_user) do
        .side-around
          %p
            = image_tag("user.png", :alt => "募集者の画像", :class => "user-pic")
          %h2= current_user.name
    .s-message.side-each.s-hover
      = link_to groups_path do
        .side-around
          %p= icon("fas", "envelope", class: "s-icon")
          %h2 メッセージ
    .s-form.side-each.s-hover
      = link_to new_recruitment_path do
        .side-around
          %p= icon("fas", "pen-square", class: "s-icon")
          %h2 投稿する
    .s-form.side-each.s-hover
      = link_to users_path do
        .side-around
          %p= icon("fas", "users", class: "s-icon")
          %h2 ユーザー一覧
  - else
    .s-login.side-each
      = link_to new_user_session_path do
        .side-around.side-login
          %p= icon("fas", "key", class: "s-icon")
          %h2 ログイン
    .s-logout.side-each
      = link_to new_user_registration_path do
        .side-around.side-log
          %p= icon("fas", "user-plus", class: "s-icon")
          %h2 新規登録
  .s-recruitment.side-each.s-hover
    = link_to recruitments_path do
      .side-around
        %p= icon("fas", "mail-bulk", class: "s-icon")
        %h2 全投稿
  .s-teacher.side-each.s-hover
    = link_to teacher_index_path, id: "teacher" do
      .side-around
        %p= icon("fas", "user-tie", class: "s-icon")
        %h2 指導者
  .s-student.side-each.s-hover
    = link_to student_index_path, id: "student" do
      .side-around
        %p= icon("fas", "user-graduate", class: "s-icon")
        %h2 受講者
  - if user_signed_in?
    .s-logout.side-each
      = link_to destroy_user_session_path, class: "log", method: :delete, data: {confirm: "本当にいいですか？"} do
        .side-around.side-log
          %p= icon("fas", "sign-out-alt", class: "s-icon")
          %h2 ログアウト
