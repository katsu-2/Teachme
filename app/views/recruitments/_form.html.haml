%section.main
  .side
    = render 'sidebar'
  .recruitment-wrap
    .recruitment-around
      .recruitment-inner
        %section.recruitment-upper
        %section.recruitment-form
          = form_with model: @recruitment do |f|
            .r-title
              .title-label
                %h2 タイトル
                %p 必須
              .title-field
                = f.text_field :title, class: "form-control input-title" ,placeholder: "(例)野球の指導をして下さる方いませんか？"
              .title-count
                %p
                  %span#t-count 0文字
                  %span /30文字
            .r-content
              .content-label
                %h2 募集内容
                %p 必須
              .content-field
                = f.text_area :content, class: "form-control input-content",placeholder: "どういう人にどういった事を指導して欲しいのか具体的に書いてください。 |
                  (例)高校野球で4番を打っていた人に自分のスイングを見てどこがおかしいか指導して欲しい。", rows: 13 |
              .content-count
                %p
                  %span#c-count 0文字
                  %span /1000文字
            .r-submit
              = f.submit "募集する", class: "submit-btn"
