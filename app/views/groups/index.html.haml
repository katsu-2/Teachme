%section.main
  .side
    = render 'recruitments/sidebar'
  .group-wrap
    .group-around
      - @another_group_users.includes(:user).includes(:group).each do |user|
        .each-message
          .your-img
            %p
              = image_tag("user.png", :alt => "募集者の画像", :class => "user-pic")
          = link_to group_messages_path(user.group) do
            .your-content
              .your-name
                %h2= user.user.name
