- teachers.each do |teacher|
  .each-p
    .p-upper
      .p-user
        %p
          = image_tag("user.png", :alt => "募集者の画像", :class => "user-pic")
        .user-name
          %p= teacher.user.name
        .user-pref
          %p= teacher.user.prefecture
      .p-title
        %h2= truncate(teacher.title, length: 20)
    .p-content
      = link_to recruitment_path(teacher), class: "link" do
        %p
          = truncate(teacher.content, length: 50)
