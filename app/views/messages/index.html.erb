<div class="message-wrap">
  <div class="message-around">
    <div class="message-upper">
      <p>相手の名前</p>
    </div>
    <div class="message-main">
      <% @messages.each do |message| %>
        <div class="content">
          <div class="message-user">
            <p><%= message.user.name %></p>
          </div>
          <div class="message">
            <p><%= message.message %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="message-form">
      <%= form_for [@group, @message], html: { id: 'new_message' } do |f| %>
        <%= f.text_field :message, class: "form-message", id: "message_js", placeholder: "type a message" %>
        <%= f.submit '送信', class: "submit-btn" %>
      <% end %>
    </div>
  </div>
</div>


