
<div class="form-around">
  <div class="signup-form">
    <div class="form-title">
      <h1>ログインする</h1>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="new-email">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "email-form" %>
    </div>

    <div class="new-pass">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "pass-form" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="pass-conf">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="new-submit">
      <%= f.submit "ログイン",class: "submit-btn" %>
    </div>
    <% end %>
    <div class="new-under">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
