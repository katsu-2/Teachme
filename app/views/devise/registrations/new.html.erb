
<div class="form-around">
  <div class="signup-form">
    <div class="form-title">
      <h1>Teachmeへようこそ</h1>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="new-user-name">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前(10字以内)", class: "name-form" %>
    </div>

    <div class="new-email">
      <%= f.email_field :email,  placeholder: "メールアドレス", class: "email-form" %>
    </div>


    <div class="new-pass">
      <%= f.password_field :password,  placeholder: "パスワード", class: "pass-form" %>
    </div>

    <div class="pass-conf">
      <%= f.password_field :password_confirmation,  placeholder: "パスワードの確認", class: "pass-form" %>
    </div>

    <div class="new-sex">
      <div class="l-sex user-title">
        <h2>性別</h2>
      </div>
      <div class="but-sex">
        <div class="sex-man">
          <%= f.label '男性' %>
          <%= f.radio_button :sex, :男性 %>
        </div>

        <div class="sex-women">
          <%= f.label '女性' %>
          <%= f.radio_button :sex, :女性 %>
        </div>
      </div>
    </div>

    <div class="new-prefecture">
      <div class="pref-title user-title">
        <h2>都道府県</h2>
      </div>
      <div class="select-pref">
        <%= f.select :prefecture, User.prefectures.keys, {prompt: '選択してください'}, class: "btn pref-btn"%>
      </div>
    </div>

    <div class="new-submit">
      <%= f.submit "登録する",class: "submit-btn" %>
    </div>

    <% end %>
    <div class="new-under">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
