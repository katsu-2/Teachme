
<div class="form-around">
  <div class="signup-form">
    <div class="form-title">
      <h1>Teachmeへようこそ</h1>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="new-user-name">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前(10字以内)", class: "name-form" %>
    </div>
    <div class="new-email">
      <%= f.email_field :email,  placeholder: "メールアドレス", class: "email-form" %>
    </div>
    <div class="new-pass">
      <%= f.password_field :password,  placeholder: "パスワード", class: "pass-form" %>
    </div>
    <div class="pass-conf">
      <%= f.password_field :password_confirmation,  placeholder: "パスワードの確認", class: "pass-form" %>
    </div>
    <div class="new-submit">
      <%= f.submit "登録する",class: "submit-btn" %>
    </div>
    <% end %>
    <div class="new-under">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
