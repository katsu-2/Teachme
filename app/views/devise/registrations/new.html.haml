.form-around
  .signup-form
    .form-title
      %h1 Teachmeへようこそ
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .new-user-name
        = f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前(10字以内)", class: "name-form"
      .new-email
        = f.email_field :email,  placeholder: "メールアドレス", class: "email-form"
      .new-pass
        = f.password_field :password,  placeholder: "パスワード", class: "pass-form"
      .pass-conf
        = f.password_field :password_confirmation,  placeholder: "パスワードの確認", class: "pass-form"
      .new-person-type
        .radio_button
          = f.radio_button :person_type, "受講者", class: "type-form", id: "inlineRadio1"
          %label.form-check-label{:for => "inlineRadio1"} 受講者
        .radio_button
          = f.radio_button :person_type, "指導者", class: "type-form", id: "inlineRadio2"
          %label.form-check-label{:for => "inlineRadio2"} 指導者
      .new-prefecture
        .pref-title.user-title
          %h2 都道府県
        .select-pref
          = f.select :prefecture, User.prefectures.keys, {prompt: '選択してください'}, class: "btn pref-btn"
      .new-submit
        = f.submit "登録する",class: "submit-btn"
    .new-under
      = render "devise/shared/links"
